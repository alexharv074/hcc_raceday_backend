<p id="notice"><%= notice %></p>

<h1>Crafts</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Year</th>
      <th>Status</th>
      <th>Time</th>
      <th>Entered</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crafts.each do |craft| %>
      <tr>
        <td><%= craft.number %></td>
        <td><%= craft.year %></td>
        <td><%= craft.status %></td>
        <td><%= craft.time %></td>
        <td><%= craft.entered %></td>
        <td><%= craft.user %></td>
        <td><%= link_to 'Show', craft %></td>
        <td><%= link_to 'Edit', edit_craft_path(craft) %></td>
        <td><%= link_to 'Destroy', craft, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

