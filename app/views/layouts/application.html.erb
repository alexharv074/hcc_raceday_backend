<!DOCTYPE html>
<html>
  <head>
    <% title = if (defined? @page_title).nil?
                 'Raceday'
               else
                 @page_title
               end
    %>
    <% unless (defined? @refresh).nil?
      url = ''
      url = ('; URL="' + @url + '"').html_safe unless (defined? @url).nil? 
     %>
      <META http-equiv="refresh" content="<%= @refresh %>" <%= url %> />
    <% end %>
    <title><%= title %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <% if notice %>
        <div class="row">
          <div class="panel panel-info">
            <div class="panel-heading">Notices</div>
            <div class="panel-body"><%= notice %></div>
            <!--<div class="panel-footer">footer, if required</div>-->
          </div>
        </div>
      <% end %>

      <% if alert %>
        <div class="row">
          <div class="panel panel-danger">
            <div class="panel-heading">Alerts</div>
            <div class="panel-body"><%= alert %></div>
            <!--<div class="panel-footer">footer, if required</div>-->
          </div>
        </div>
      <% end %>
  
    <%= yield %>
  </body>
</html>
