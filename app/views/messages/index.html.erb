<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>To</th>
      <th>From</th>
      <th>Message time</th>
      <th>Priority</th>
      <th>Message</th>
      <th>Displayed</th>
      <th>Validtil</th>
      <th>User</th>
      <th>Entered</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.number %></td>
        <td><%= message.to %></td>
        <td><%= message.from %></td>
        <td><%= message.message_time %></td>
        <td><%= message.priority %></td>
        <td><%= message.message %></td>
        <td><%= message.displayed %></td>
        <td><%= message.validtil %></td>
        <td><%= message.user %></td>
        <td><%= message.entered %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

